{
  "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "baseUrl": "./",
      "paths": {
        "src": ["./src"],
        "test": ["./test"]
      }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.test.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}